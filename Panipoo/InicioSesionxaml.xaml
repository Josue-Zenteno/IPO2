<Page
    x:Class="Panipo.InicioSesionxaml"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Panipo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="White">
        <Grid VerticalAlignment="Top" Background="#FF534D4D" Width="Auto"/>
        <Grid Height="500" Margin="286,250,320,250" RenderTransformOrigin="0.41,0.463">

            <StackPanel Background="#7B6079" Margin="0,0,431,0" Width="Auto" Height="Auto">

                <TextBox Margin="20,170,20,20" Foreground="Black" Header="Nombre usuario" PlaceholderText="Enter your nombre usuario" Height="Auto" />
                <PasswordBox Header="Contraseña" PlaceholderText="Enter your password" PasswordChar="#" Height="Auto" HorizontalAlignment="Stretch" Width="420" />
                <Button Style="{StaticResource ButtonRevealStyle}" Content="Aceptar" HorizontalAlignment="Right" Margin="0,50,85,0" />
            </StackPanel>
            <Image  Source="imagenes/panaderia.jpg" HorizontalAlignment="Left" Margin="590,0,0,0" VerticalAlignment="Center"/>
        </Grid>

    </Grid>
</Page>
